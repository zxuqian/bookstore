	    <script src="${context:layout/admin/plugins/flot/plugins/jquery.flot.resize.min.js}"></script>
	    <script src="${context:layout/admin/plugins/colorpicker/colorpicker-min.js}"></script>
	    <script src="${context:layout/admin/plugins/validate/jquery.validate-min.js}"></script>
