<html xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
      xmlns:p="tapestry:parameter">
<!--[if lt IE 7]> <html class="lt-ie9 lt-ie8 lt-ie7" lang="en"> <![endif]-->
<!--[if IE 7]>    <html class="lt-ie9 lt-ie8" lang="en"> <![endif]-->
<!--[if IE 8]>    <html class="lt-ie9" lang="en"> <![endif]-->
<!--[if gt IE 8]><!--><!--<![endif]-->
<head>
<meta charset="utf-8" />

<!-- Viewport Metatag -->
<meta name="viewport" content="width=device-width,initial-scale=1.0" />

<!-- Required Stylesheets -->
<link rel="stylesheet" type="text/css" href="${context:layout/admin}/bootstrap/css/bootstrap.min.css" media="screen"/>
<link rel="stylesheet" type="text/css" href="${context:layout/admin}/css/fonts/ptsans/stylesheet.css" media="screen"/>
<link rel="stylesheet" type="text/css" href="${context:layout/admin}/css/fonts/icomoon/style.css" media="screen"/>

<link rel="stylesheet" type="text/css" href="${context:layout/admin}/css/login.css" media="screen"/>

<link rel="stylesheet" type="text/css" href="${context:layout/admin}/css/mws-theme.css" media="screen"/>

<title>网络图书交易管理系统 - 登录</title>
</head>
<body>
    <div id="mws-login-wrapper">
        <div id="mws-login">
            <h1>登录</h1>
            <div class="mws-login-lock"><i class="icon-lock"></i></div>
            <div id="mws-login-form">
                <t:Form class="mws-form">
                    <div class="mws-form-row">
                        <div class="mws-form-item">
                            <t:TextField value="username" class="mws-login-username required" placeholder="用户名"/>
                        </div>
                    </div>
                    <div class="mws-form-row">
                        <div class="mws-form-item">
                            <t:PasswordField value="password" class="mws-login-password required" placeholder="密码"/>
                        </div>
                    </div>
                    <div id="mws-login-remember" class="mws-form-row mws-inset">
                        <ul class="mws-form-list inline">
                            <li>
                                <input id="remember" type="checkbox" /> 
                                <label for="remember">记住密码</label>
                            </li>
                        </ul>
                    </div>
                    <div class="mws-form-row">
                        <input type="submit" value="登录" class="btn btn-success mws-login-button" />
                    </div>
                </t:Form>
            </div>
        </div>
    </div>

    <!-- JavaScript Plugins -->
    <script src="js/libs/jquery-1.8.3.min.js"></script>
    <script src="js/libs/jquery.placeholder.min.js"></script>
    <script src="custom-plugins/fileinput.js"></script>
    
    <!-- jQuery-UI Dependent Scripts -->
    <script src="jui/js/jquery-ui-effects.min.js"></script>

    <!-- Plugin Scripts -->
    <script src="plugins/validate/jquery.validate-min.js"></script>

    <!-- Login Script -->
    <script src="js/core/login.js"></script>

</body>
</html>
